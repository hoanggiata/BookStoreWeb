@model BookStoreWeb.Models.Account;
@{
    Layout = null;
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="@Url.Content("~/css/profile.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/IMG/source/icon-logo.ico")" rel="icon" type="image/x-icon" />
    ViewData["Title"] = "My Profile";
}
    <title>@ViewBag.title</title>
<body>
    <div class="main-content">
        <!-- Top navbar -->
        <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="h4 mb-0 text-white text-uppercase d-none d-lg-inline-block" href="@Url.Action("Index","Home")">BACK TO HOME</a>
                <!-- Form -->
                <!-- User -->
                <ul class="navbar-nav align-items-center d-none d-md-flex">
                    <li class="nav-item dropdown">
                        <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <div class="media align-items-center">
                                <span class="avatar avatar-sm rounded-circle">
                                    <img alt="Image placeholder" src="/IMG/source/avatar/User.jpg">
                                </span>
                                <div class="media-body ml-2 d-none d-lg-block">
                                    <span class="mb-0 text-sm  font-weight-bold">@Model.Username</span>
                                </div>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- Header -->
        <div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center" style="min-height: 600px; background-image: url(https://img.freepik.com/premium-photo/smooth-sky-blue-color-paper-banner-background_8087-4420.jpg); background-size: cover; background-position: center top;">
            <!-- Mask -->
            <span class="mask bg-gradient-default opacity-8"></span>
            <!-- Header container -->
            <div class="container-fluid d-flex align-items-center">
                <div class="row">
                    <div class="col-lg-7 col-md-10">
                        <h1 class="display-2 text-white">Hello @Model.LastName</h1>
                        <p class="text-white mt-0 mb-5">This is your profile page. You can see all the information about you here. !</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                    <div class="card card-profile shadow">
                        <div class="row justify-content-center">
                            <div class="col-lg-3 order-lg-2">
                                <div class="card-profile-image">
                                    <a href="#">
                                        <img src="/IMG/source/avatar/User.jpg" class="rounded-circle">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0 pt-md-4" style="margin-top:3em;">
                            <div class="text-center">
                                <h3>
                                    @Model.LastName<span class="font-weight-light"></span>
                                </h3>
                                <div class="h5 font-weight-500" style="margin-top:3em; font-size:large;">
                                    
                                    <i class="ni location_pin mr-2"></i>@Model.Country
                                    <br />
                                    <i class="ni location_pin mr-2"></i>@Model.Address
                                </div>
                                <hr class="my-4">
                                <p>@Model.AccountDes</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">My account</h3>
                                </div>
                                <div class="col-4 text-right">                      
                                    <a href="#" id="btn-edit" onclick="editProfile()" class="btn btn-sm btn-primary">Edit Profile</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form action="/Profile/Index" method="post">
                                <h6 class="heading-small text-muted mb-4">User information</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-username">Username</label>
                                                <input type="text" id="input-username" name="username" class="form-control form-control-alternative" placeholder="Username" value="@Model.Username">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Email address</label>
                                                <input type="email" id="input-email" name="email" class="form-control form-control-alternative" placeholder="Email Address" value="@Model.Email">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-first-name">First name</label>
                                                <input type="text" id="input-first-name" name="first_name" class="form-control form-control-alternative" placeholder="First name" value="@Model.FirstName">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-last-name">Last name</label>
                                                <input type="text" id="input-last-name" name="last_name" class="form-control form-control-alternative" placeholder="Last name" value="@Model.LastName">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4">
                                <!-- Address -->
                                <h6 class="heading-small text-muted mb-4">Contact information</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-address">Address</label>
                                                <input id="input-address" name="address" class="form-control form-control-alternative" placeholder="Home Address" value="@Model.Address" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-country">Country</label>
                                                <!-- Country names and Country Name -->
                                                <select class="form-select" id="country" name="country">
                                                    @foreach (var item in ViewBag.countryList)
                                                    {
                                                        if (item == Model.Country)
                                                        {

                                                            <option value="@item" selected="selected">@item</option>

                                                        }
                                                        else
                                                        {                 
                                                                <option value="@item">@item</option>
                                                        }
                                                    }

                                                </select>
                                               
                                            </div>
                                        </div>
     
                                    </div>
                                </div>
                                <hr class="my-4">
                                <!-- Description -->
                                <h6 class="heading-small text-muted mb-4">About me</h6>
                                <div class="pl-lg-4">
                                    <div class="form-group focused">
                                        <label>About Me</label>
                                        <textarea rows="4" class="form-control form-control-alternative" name="account_des" id="user_text" placeholder="A few words about you ...">@Model.AccountDes</textarea>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <input type="submit" value="Save Changes" class="btn btn-sm btn-primary" id="btn-save" style="display:none; background-color:rgb(75,181,67)" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
    </footer>
</body>

<script type="text/javascript">
    var index,allInput,user_des,button_edit;
    function disable_input()
    {      
        allInput = document.getElementsByTagName('input');
        document.getElementById('user_text').disabled = true;
        document.getElementById('country').disabled = true;
        for(index = 0; index<allInput.length; ++index )
        {
            allInput[index].disabled = true;

        }
           
    }
    window.onload = disable_input;
    function editProfile()
    {
        document.getElementById('btn-edit').remove();      
        allInput = document.getElementsByTagName('input');
        for (index = 0; index < allInput.length; ++index) {
            allInput[index].disabled = false;
        }
        document.getElementById("input-username").disabled = true;
        document.getElementById('user_text').disabled = false;
        document.getElementById('country').disabled = false;
        document.getElementById('btn-save').style.display = "inline-block";
    }
</script>
