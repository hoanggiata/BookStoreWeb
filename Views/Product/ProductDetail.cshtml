<div class="comment-section">
    <div class="post-comment">
        @foreach (var item in ViewBag.Query)
        {
            <div class="list">
                <div class="user">
                    <div class="user-image"><img src="~/IMG/source/avatar/User.jpg" alt="Avatar" /></div>
                    <div class="user-meta">
                        <div class="user-name">@item.accName.Username</div>
                        <div class="time-post">@item.cmt.CommentTime</div>
                    </div>
                </div>
                <div class="comment-post">@item.cmt.CommentContent</div>
            </div>
        }      
    </div>
    <div class="comment-box">
        <div class="user">
            <div class="user-image"><img src="~/IMG/source/avatar/User.jpg" alt="Avatar" /></div>
            <div class="user-name">Add a comment</div>
        </div>
        <form action="" method="post">
            <textarea name="comment_content" placeholder="Write your thought about this book"></textarea>
            <button class="comment_submit" type="submit">Submit</button>
        </form>
    </div>
</div>

